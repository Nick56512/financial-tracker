{
   "compilerOptions": {
      "sourceMap": true,
      "target": "es2022",
      "module": "commonjs",
      "rootDir": "./src",
      "baseUrl": "./src",
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "paths": {
         "@core/*": ["core/*"],
         "@bot/*": ["bot/*"],
         "@domains/*": ["domains/*"],
         "@config/*": ["core/config/*"]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
   }
}
